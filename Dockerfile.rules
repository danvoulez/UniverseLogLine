# Multi-stage build for logline-rules service
FROM rust:1.75-slim as builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY logline-core/ ./logline-core/
COPY logline-protocol/ ./logline-protocol/
COPY logline-rules/ ./logline-rules/

# Build the rules service
RUN cargo build --release --bin logline-rules

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    libpq5 \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN useradd -r -s /bin/false logline

# Copy binary
COPY --from=builder /app/target/release/logline-rules /usr/local/bin/logline-rules

# Set ownership
RUN chown logline:logline /usr/local/bin/logline-rules

# Switch to app user
USER logline

# Expose port
EXPOSE 8081

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8081/health || exit 1

# Run the service
CMD ["logline-rules"]
